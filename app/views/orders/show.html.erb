<div class="header row" id="order">
  <div class="header">
    <h2><%= @order %></h2>
    <div class="total-item-count">
      <%= "Bestellung: #{@order.total_item_count} StÃ¼ck" %>
    </div>
    <div class="total-item-price">
      <%= "Total: #{@order.total_item_price} #{@order.currency}" %>
    </div>
  </div>
</div>

<div class="order_items row">
  <table class="table">
    <thead>
      <th class="image"></th>
      <th class="product-name">Produkt</th>
      <th class="item-amount">Anzahl</th>
      <th class="multiplier"></th>
      <th class="item-price">Preis</th>
      <th class="item-total-price">Total</th>
    </thead>
    <tbody>
      <% @order.order_items.each do |item| %>
        <% product = item.product %>
        <tr>
          <td class="image"><%= image_tag product.photo.picture.url(:small) %></td>
          <td class="product-name"><%= product.name %></td>
          <td class="item-amount"><%= item.amount %></td>
          <td class="multiplier">x</td>
          <td class="item-price"><%= "#{item.price} #{item.currency}" %></td>
          <td class="item-total-price"><%= "#{item.total_price} #{item.currency}" %></td>
        </tr>
      <% end %>
    </tbody>
  </div>
</div>
