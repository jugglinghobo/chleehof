<div class="row" id="products">
  <div class="col-md-6 col-xs-12">
    <h2>Verpackungsmaterial</h2>
  </div>
  <div class="col-md-3 col-xs-12">
    <%= link_to 'Bestellformular ausdrucken', class: 'btn btn-info' %>
  </div>
  <div class="col-md-3 col-xs-12">
    <%= link_to 'Online bestellen', url(:orders, :new), class: 'btn btn-info' %>
  </div>
</div>
<div class="row">
  <% @products.each do |product| %>
    <div class="product col-lg-3 col-sm-4 col-xs-12">
      <div class="product-photo">
        <%= link_to image(product), url(:products, :show, id: product.id), class: 'dani' %>
      </div>
      <div class="product-information">
        <div class="product-name text-center">
          <%= product.name %>
        </div>
        <div class="product-price text-center">
          <%= product.price %>
        </div>
      </div>
    </div>
  <% end %>
</div>
