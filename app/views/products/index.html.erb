<div class="row" id="products">
  <div class="col-md-6">
    <div class="page-header">
      <h1>Verpackungsmaterial</h1>
    </div>
  </div>
  <div class="col-md-6">
    <div class="pull-right">
      <%= link_to "Bestellformular drucken", url(:orders, :print_form, format: :pdf), class: 'btn btn-primary' %>
      <%= link_to "Online bestellen", url(:orders, :new), class: 'btn btn-primary' %>
    </div>
    <div class="clearfix">
    </div>
  </div>
</div>
</div>
<div class="row">
  <% @products.each do |product| %>
    <div class="product col-lg-3 col-sm-4 col-xs-12">
      <div class="product-photo">
        <%= link_to image(product), url(:products, :show, id: product.id), class: 'dani' %>
      </div>
      <div class="product-information">
        <div class="product-name text-center">
          <%= product.name %>
        </div>
        <div class="product-price text-center">
          <%= product.price %>
        </div>
      </div>
    </div>
  <% end %>
</div>
